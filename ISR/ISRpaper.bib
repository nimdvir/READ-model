@article{obrien2017,
  title = {Antecedents and Learning Outcomes of Online News Engagement},
  author = {O'Brien, Heather L.},
  date = {2017-12-01},
  journaltitle = {Journal of the Association for Information Science and Technology},
  shortjournal = {Journal of the Association for Information Science and Technology},
  volume = {68},
